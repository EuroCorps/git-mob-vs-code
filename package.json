{
  "name": "git-mob",
  "displayName": "Git Mob - Co-authors in commits",
  "description": "A cross-platform command-line tool for social coding. Includes co-authors in commits when pair/mob programming.",
  "version": "0.1.0",
  "publisher": "RichardKotze",
  "engines": {
    "vscode": "^1.29.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rkotze/git-mob-vs-code.git"
  },
  "categories": [
    "Other"
  ],
  "icon": "resources/gitmob.png",
  "galleryBanner": {
    "color": "#8647ae",
    "theme": "dark"
  },
  "author": {
    "name": "Richard Kotze",
    "email": "richkotze@outlook.com"
  },
  "activationEvents": [
    "onView:gitmob.CoAuthorsView"
  ],
  "main": "./extension",
  "keywords": [
    "git",
    "co-authors",
    "log",
    "annotation",
    "github"
  ],
  "contributes": {
    "commands": [
      {
        "command": "gitmob.addCoAuthor",
        "title": "Add co-author",
        "category": "Git",
        "icon": {
          "light": "resources/icons/light/stage.svg",
          "dark": "resources/icons/dark/stage.svg"
        }
      },
      {
        "command": "gitmob.removeCoAuthor",
        "title": "Remove co-author",
        "category": "Git",
        "icon": {
          "light": "resources/icons/light/unstage.svg",
          "dark": "resources/icons/dark/unstage.svg"
        }
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "gitmob.addCoAuthor",
          "when": "viewItem == add-author",
          "group": "inline"
        },
        {
          "command": "gitmob.removeCoAuthor",
          "when": "viewItem == remove-author",
          "group": "inline"
        }
      ]
    },
    "views": {
      "scm": [
        {
          "id": "gitmob.CoAuthorsView",
          "name": "Git Mob Co-authors"
        }
      ]
    }
  },
  "scripts": {
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.42",
    "@types/node": "^8.10.25",
    "eslint": "^4.11.0",
    "typescript": "^2.6.1",
    "vscode": "^1.1.26"
  }
}
